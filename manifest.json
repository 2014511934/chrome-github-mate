{
  "name": "GitHub Mate",
  "description": "Missing mate of GitHub, easy download and notifications",
  "default_locale": "en",
  "version": "0.3",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions" : [
    "*://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["style.css"],
      "js": ["script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}

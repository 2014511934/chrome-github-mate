{
  "name": "GitHub Mate",
  "description": "Missing mate of GitHub, making single file download effortless and with more features",
  "default_locale": "en",
  "version": "0.4.1",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions" : [
    "*://github.com/*",
    "tabs",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["style.css"],
      "js": ["config.js", "script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
